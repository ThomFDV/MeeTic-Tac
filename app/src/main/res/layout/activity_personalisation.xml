<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:columnWidth="320dp"
    android:orientation="vertical"
    android:rowCount="4"
    android:stretchMode="columnWidth" >

    <LinearLayout
        android:id="@+id/braceletDrop"
        android:layout_width="50dp"
        android:layout_height="400dp"
        android:background="@drawable/shape"
        android:layout_marginStart="60dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/housingDrop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/shape" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialDrop"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="177dp"
        android:background="@drawable/shape" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/braceletDrag"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:background="@drawable/shape"
        android:layout_marginStart="170dp">

        <ImageView
            android:id="@+id/braceletImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/montre" />
        <ImageView
            android:id="@+id/braceletImg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/montre2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/housingDrag"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/shape" >

        <ImageView
            android:id="@+id/housingImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boitier" />
        <ImageView
            android:id="@+id/housingImg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boitier2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialDrag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/shape" >

        <ImageView
            android:id="@+id/dialImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cadran" />
        <ImageView
            android:id="@+id/dialImg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cadran2" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>